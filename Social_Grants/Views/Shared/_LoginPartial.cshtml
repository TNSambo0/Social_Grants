@using Microsoft.AspNetCore.Identity
@using Social_Grants.Models.Account

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item-nav me-2 mb-1">
            @{
                var user = await UserManager.GetUserAsync(User);
                var userFullName = new AppUser
                {
                    FirstName = user.FirstName,
                    LastName = user.LastName
                };
            }
            <a class="nav-link text-dark" asp-action="Profile" asp-controller="Account" title="Manage" asp-route-Id="@user.Id">Hello @userFullName.FirstName @userFullName.LastName</a>
        </li>
        <li class="nav-item-nav">
            <a id="logout" asp-action="Logout" asp-controller="Account" type="button" class="nav-link btn btn-link text-dark">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item-nav">
            <a class="nav-link text-dark" id="login" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>

